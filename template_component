package component

import (
	tea "github.com/charmbracelet/bubbletea"
	"github.com/givensuman/containertui/internal/ui/types"
)

type component struct {
	types.Component
}

var (
	_ tea.Model            = (*component)(nil)
	_ types.ComponentModel = (*component)(nil)
)

func newComponent() component {
	return component{}
}

func (c *component) UpdateWindowDimensions(msg tea.WindowSizeMsg) {
	c.WindowWidth = msg.Width
	c.WindowHeight = msg.Height
}

func (c component) Init() tea.Cmd {
	return nil
}

func (c component) Update(msg tea.Msg) (tea.Model, tea.Cmd) {
	var cmd tea.Cmd

	switch msg := msg.(type) {
	case tea.WindowSizeMsg:
		c.UpdateWindowDimensions(msg)
	}

	return c, cmd
}

func (c component) View() string {
	return "Hello, world!"
}
